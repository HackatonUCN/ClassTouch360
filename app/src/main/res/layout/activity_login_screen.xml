<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/img_loginbg">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".ui.auth.LoginActivity">

        <!-- CardView contenedor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/colorPrimaryDark"
            app:strokeWidth="10dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- ProgressBar centrado (invisible al inicio) -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

                <!-- Título -->
                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iniciar Sesión"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- Usuario -->
                <EditText
                    android:id="@+id/login_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorLink"
                    android:hint="Correo"
                    android:padding="12dp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/textDisabled"/>

                <!-- Contraseña con toggle -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorLink">

                    <EditText
                        android:id="@+id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_edittext"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/textPrimary"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:padding="12dp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textDisabled"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Link de contraseña olvidada -->
                <TextView
                    android:id="@+id/forgotPasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:textStyle="italic"/>

                <!-- Botón de login -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="Iniciar Sesión"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="8dp"/>

                <!-- Botón Google oscuro -->
                <com.developer.gbuttons.GoogleSignInButton
                    android:text=" Iniciar Sesión con Google"
                    android:id="@+id/googleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    app:isDarkTheme="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Texto de registro abajo -->
        <TextView
            android:id="@+id/signupRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="¿Aún no te has registrado? Regístrate"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="italic"/>
    </LinearLayout>
</ScrollView>
